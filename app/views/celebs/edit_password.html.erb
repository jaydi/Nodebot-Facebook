<section class="first">

  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>비밀번호 수정</h2>
        <hr class="star-primary">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">

        <%= form_tag '/celebs/update_password', method: :put, id: :edit_password_celeb_form, multipart: true do %>

            <div class="row control-group">
              <div class="form-group col-xs-6 col-xs-offset-3 floating-label-form-group controls">
                <label>비밀번호</label>
                <input type="password" class="form-control" placeholder="Password" name="password" required data-validation-required-message="Enter current password.">

                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-6 col-xs-offset-3 floating-label-form-group controls">
                <label>새 비밀번호</label>
                <input type="password" class="form-control" placeholder="New Password" name="new_password" required data-validation-required-message="Enter new password.">

                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-6 col-xs-offset-3 floating-label-form-group controls">
                <label>새 비밀번호 확인</label>
                <input type="password" class="form-control" placeholder="Confirm New Password" name="new_password_confirm" required data-validation-required-message="Enter new password again.">

                <p class="help-block text-danger"></p>
              </div>
            </div>

            <br>

            <div id="success"></div>
            <div class="row">
              <div class="form-group col-xs-6 col-xs-offset-3 text-right">
                <button type="submit" class="btn btn-success btn-lg">확인</button>
              </div>
            </div>

        <% end %>

      </div>
    </div>

  </div>

</section>