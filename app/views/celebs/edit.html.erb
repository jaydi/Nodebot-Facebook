<script>
  function showPreview(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $('#img-profile').css('background-image', 'url("' + e.target.result + '")');
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  function validateProfile() {
    <% if @celeb.profile_pic.blank? %>
    if (!$('#input_profile').val()) {
      toastr.error('프로필 이미지를 입력해주세요.');
      return false;
    }
    <% end %>
  }
</script>

<section id="sign-up" class="first">
  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>계정정보</h2>
        <hr class="star-primary">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">

        <%= form_tag '/celebs', method: :put, id: :edit_celeb_form, multipart: true, :html => {:onsubmit => "return validateProfile();"} do %>

            <div class="row control-group">
              <div class="form-group col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 floating-label-form-group controls input-image">
                <img id="img-profile" class="img-responsive img-centered img-circle img-profile clickable" onclick="$('#input-profile').trigger('click');" style="background-image: url('<%= @celeb.profile_pic.blank? ? "/images/profile.png" : @celeb.profile_pic %>')"/>
                <input id="input-profile" name="profile" onchange="showPreview(this)" type="file"/>

                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 floating-label-form-group controls">
                <label>닉네임</label>
                <input type="text" class="form-control" placeholder="Nickname" name="name" value="<%= @celeb.name %>" required data-validation-required-message="Please enter your nickname.">

                <p class="help-block text-danger"></p>
              </div>
            </div>

            <br>

            <div id="success"></div>
            <div class="row">
              <div class="form-group col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-right">
                <button type="submit" class="btn btn-success btn-lg">확인</button>
              </div>
            </div>

        <% end %>

        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-right">
            <a href="/celebs/edit_password">비밀번호 변경</a>
          </div>
        </div>

      </div>
    </div>

  </div>
</section>