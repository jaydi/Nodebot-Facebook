<section id="sign-up" class="first">

  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>계정정보</h2>
        <hr class="star-primary">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">

        <%= form_tag '/celebs', method: :put, id: :edit_celeb_form, multipart: true do %>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <img class="img-responsive" src="images/profile.png" alt="">
                <input type="file" class="form-control" name="profile" required data-validation-required-message="Please enter your profile.">
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>이름</label>
                <input type="text" class="form-control" placeholder="Name" name="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <br>

            <div id="success"></div>
            <div class="row">
              <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-success btn-lg">확인</button>
              </div>
            </div>

        <% end %>

      </div>
    </div>

  </div>

</section>