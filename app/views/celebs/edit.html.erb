<%= form_tag '/celebs', method: :put, id: :edit_celeb_form, multipart: true do %>

    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, '', class: 'form-control' %>
    </div>

    <div>
      <%= label_tag :profile %>
      <%= file_field_tag :profile, class: 'form-control' %>
    </div>

    <%= submit_tag '확인' %>

<% end %>