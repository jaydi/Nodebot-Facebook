<section class="first">

  <div class="container">

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="list-group">

          <div class="list-group-item">

            <h4 class="list-group-item-heading"><%= @message.sender.name %></h4>

            <p class="list-group-item-text"><%= @message.text %></p>

            <% if @message.delivered? %>
                <div class="well text-center" style="margin-top: 20px;">
                  <% if @message.video_repliable? %>
                      <div>
                        아래 버튼을 눌러서 답장할 수 있습니다.<br/>
                        답장 수익금: <%= @message.payment.partner_share %>원
                      </div>
                      <%= render '/shared/fb_messenger', message_target: "RPL_#{@message.id}" %>
                  <% else %>
                      <%= form_tag "/message/#{@message.id}/reply", method: :post, id: :reply_message_form do %>

                          <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                              <label>답장</label>
                              <input type="text" rows="3" class="form-control" placeholder="답장" name="text" required data-validation-required-message="Please enter reply text.">

                              <p class="help-block text-danger"></p>
                            </div>
                          </div>

                          <br>

                          <div id="success"></div>
                          <div class="row">
                            <div class="form-group col-xs-12 text-right">
                              <button type="submit" class="btn btn-success btn-lg">전송</button>
                            </div>
                          </div>

                      <% end %>
                  <% end %>
                </div>
            <% end %>

          </div>

          <% if @message.replied? %>
              <div class="list-group-item">
                <h4 class="list-group-item-heading">나의 답장</h4>

                <embed style="width: 100%" src="<%= @message.reply_message.video_url %>"/>
              </div>
          <% end %>

        </div>
      </div>
    </div>


  </div>

</section>