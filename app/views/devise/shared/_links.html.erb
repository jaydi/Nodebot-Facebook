<%- if controller_name != 'sessions' %>
  <%= link_to "로그인", new_user_session_path %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "가입", new_user_registration_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "비밀번호 찾기", new_user_password_path %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "이메일 확인 안내메일을 받지 못했나요?", new_user_confirmation_path %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "계정잠금해제 안내메일을 받지 못했나요?", new_user_unlock_path %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- User.omniauth_providers.each do |provider| %>
    <%= link_to "#{OmniAuth::Utils.camelize(provider)} 시작하기", omniauth_user_authorize_path(provider) %><br />
  <% end -%>
<% end -%>
